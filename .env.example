# Development Environment Variables
# Copy this file to .env and update with your actual values

# Django Configuration
SECRET_KEY=your-super-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (Local Development)
DB_NAME=qu_security_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# AWS RDS Configuration (Production)
RDS_DB_NAME=qu_security_db_prod
RDS_USERNAME=postgres
RDS_PASSWORD=your-rds-password
RDS_HOSTNAME=your-rds-endpoint.region.rds.amazonaws.com
RDS_PORT=5432

# AWS S3 Configuration
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=qu-security-static
AWS_S3_REGION_NAME=us-east-1

# CORS Configuration (Add your frontend domains)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourfrontend.com
