# Docker Development Environment Variables
# This file is used by docker-compose for the containerized environment

# Django Configuration
SECRET_KEY=django-insecure-development-key-change-in-production-e8@#%&^$@!
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,web

# Database Configuration
DB_NAME=qu_security_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=postgres
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Celery Configuration
CELERY_BROKER_URL=amqp://qu_user:qu_password@rabbitmq:5672//
CELERY_RESULT_BACKEND=redis://redis:6379/1
CELERY_ACCEPT_CONTENT=json
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC

# Cache Configuration
USE_MEMCACHED=True
MEMCACHED_ENDPOINT=memcached
MEMCACHED_PORT=11211

# Storage Configuration (Local development)
USE_S3=False
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/staticfiles

# AWS Configuration (for when S3 is needed)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=qu-security-static
# AWS_S3_REGION_NAME=us-east-1

# Task Queue Configuration
USE_ASYNC_TASKS=True
# AWS_SQS_QUEUE_URL=your-sqs-queue-url
# AWS_SQS_REGION=us-east-1
# AWS_SQS_DLQ_URL=your-dead-letter-queue-url

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173

# Feature Flags
TARIFFS_ALLOW_LEGACY_KEYS=True

# Security Settings (development)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_SECONDS=0