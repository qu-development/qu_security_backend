# Production Environment Configuration Template
# Copy this to .env.prod and fill in your actual values

# Django Core Settings
SECRET_KEY=your-super-secret-production-key-here
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-api-gateway-url.amazonaws.com

# Database Configuration (AWS RDS)
RDS_DB_NAME=qu_security_db_prod
RDS_USERNAME=postgres
RDS_PASSWORD=your-secure-database-password
RDS_HOSTNAME=your-rds-endpoint.amazonaws.com
RDS_PORT=5432

# Storage Configuration
USE_S3=True
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_STORAGE_BUCKET_NAME=qu-security-static
AWS_S3_REGION_NAME=us-east-2

# Security Settings (Production - HTTPS Enabled)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_SECONDS=31536000

# Feature flags
# Allow legacy keys ('guard', 'property') in tariffs create payloads (deprecated)
# Set to False to enforce new keys only ('guard_id', 'property_id')
TARIFFS_ALLOW_LEGACY_KEYS=True
